<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#1a1110"
    android:id="@+id/cv_movie_card">

    <ImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="188dp"
        android:layout_height="284dp"
        android:contentDescription="@string/movie_poster" />

    <ImageView
        android:id="@+id/dragIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/iv_movie_poster"
        android:layout_alignBottom="@id/iv_movie_poster"
        android:gravity="bottom|left"
        android:src="@drawable/reorder_white_18x18"
        android:outlineAmbientShadowColor="@color/white"/>

</androidx.cardview.widget.CardView>